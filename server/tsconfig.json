{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@server/*": ["./*"]
    },
    "typeRoots": ["../types", "../node_modules/@types"]
  },
  "include": ["**/*.ts"]
}