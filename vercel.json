{
  "version": 2,
  "builds": [
    {
      "src": "server/index.ts",
      "use": "@vercel/node"
    },
    {
      "src": "landing_page/**",
      "use": "@vercel/static"
    }
  ],
  "devCommand": "npx ts-node --project server/tsconfig.json server/index.ts",
  "routes": [
    {
      "src": "/",
      "dest": "/landing_page/index.html"
    },
    {
      "src": "/privacy",
      "dest": "/landing_page/privacy.html"
    },
    {
      "src": "/tos",
      "dest": "/landing_page/tos.html"
    },
    {
      "src": "/landing_page/(.*)",
      "dest": "/landing_page/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server/index"
    }
  ]
}